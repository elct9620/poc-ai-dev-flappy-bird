{
  "rubric": {
    "rules": [
      {
        "name": "Document Index Files",
        "pattern": "docs/(entities|systems|events|components)\\.md$",
        "path": "docs/rubrics/document_index.md"
      },
      {
        "name": "General TypeScript Implementation",
        "pattern": "src/.*\\.ts$",
        "path": "docs/rubrics/general.md"
      },
      {
        "name": "Testing Guidelines",
        "pattern": "features/.*\\.(feature|ts)$",
        "path": "docs/rubrics/testing.md"
      }
    ]
  }
}
