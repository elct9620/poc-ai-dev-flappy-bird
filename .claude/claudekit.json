{
  "rubric": {
    "rules": [
      {
        "name": "Document Index",
        "pattern": "docs/(entities|systems|events|components)\\.md$",
        "path": "docs/rubrics/document_index.md"
      },
      {
        "name": "General TypeScript",
        "pattern": "src/.*\\.ts$",
        "path": "docs/rubrics/general.md"
      },
      {
        "name": "Testing Guidelines",
        "pattern": "features/.*\\.(feature|ts)$",
        "path": "docs/rubrics/testing.md"
      },
      {
        "name": "Entity",
        "pattern": "src/entity/.*\\.ts$",
        "path": "docs/rubrics/entity.md"
      },
      {
        "name": "System",
        "pattern": "src/systems/.*\\.ts$",
        "path": "docs/rubrics/system.md"
      },
      {
        "name": "Adapter",
        "pattern": "src/adapters/.*\\.ts$",
        "path": "docs/rubrics/adapter.md"
      }
    ]
  }
}
