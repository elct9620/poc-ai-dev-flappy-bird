{
  "permissions": {
    "allow": [
      "Bash(pnpm test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm tsc:*)",
      "Bash(pnpm prettier:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.ts$'; then pnpm prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "rubric@claudekit": true,
    "git@claudekit": true
  },
  "extraKnownMarketplaces": {
    "claudekit": {
      "source": {
        "source": "github",
        "repo": "elct9620/claudekit"
      }
    }
  }
}
