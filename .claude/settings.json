{
  "permissions": {
    "allow": [
      "Bash(pnpm test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm tsc:*)",
      "Bash(pnpm prettier:*)",
      "SlashCommand(/design)",
      "SlashCommand(/implement)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path;  pnpm prettier --write \"$file_path\"; }"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "rubric@claudekit": true,
    "git@claudekit": true
  },
  "extraKnownMarketplaces": {
    "claudekit": {
      "source": {
        "source": "github",
        "repo": "elct9620/claudekit"
      }
    }
  }
}
